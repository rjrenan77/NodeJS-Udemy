<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="utf-8" />
	<title>Formulário de cadastro de Not�cia</title>
</head>

<body>

	<h1>Adicionar notícia</h1>

	<br/>

	<% if(validacao) { %>
		<ul>
			<% for(var i = 0; i<validacao.length; i++) { %>
				<li>

					<%= validacao[i].msg %>

				</li>
			<% } %>
		</ul>
	<% } %>

	<form action="/noticias/salvar" method="POST">
		<label>
			Título
		</label>
		<input type="text" id="titulo" name="titulo" value="<%=noticiac.titulo%>" placeholder="Título da noticia" />
		<br>
		<label>
			Resumo
		</label>
		<input type="text" id="resumo" name="resumo" value="<%=noticiac.resumo%>" placeholder="Resumo da noticia" />
		<br>
		<label>
			Nome do Autor
		</label>
		<input type="text" id="autor" name="autor" value="<%=noticiac.autor%>" placeholder="Autor da noticia" />
		<br>
		<label>
			Data
		</label>
		<input type="date" id="data_noticia" name="data_noticia" value="<%=noticiac.data_noticia%>" placeholder="Data da noticia" />
		<br>
		<label> 
			Noticia
		</label>
		<textarea id="noticia" name="noticia"  rows="5" cols="30"><%=noticiac.noticia%></textarea>
		<br>
		<input type="submit" value="Enviar" />

	</form>

</body>

</html>